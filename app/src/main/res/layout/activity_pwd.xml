<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pwd_activity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue"
        app:logo="@drawable/gallery"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        app:subtitle="user page"
        android:onClick="onBackClick"
        app:title="@string/app_name"
        app:titleMarginStart="90dp" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/pws_page"
        android:layout_centerHorizontal="true">


        <ImageButton
            android:id="@+id/albumbtn"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/album"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:focusableInTouchMode="false"
            android:onClick="onalbumClicked"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/album_name"
            android:text="View album"
            android:layout_below="@id/albumbtn"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_centerHorizontal="true"
            android:textSize="35dp"
            android:textColor="@color/text_color"
            android:textStyle="bold"/>



        <ImageButton
            android:id="@+id/peoplebtn"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/album_name"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ancestors"
            android:onClick="onpeopleClicked"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/people_page"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="View people"
            android:layout_below="@id/peoplebtn"
            android:layout_centerHorizontal="true"
            android:textColor="@color/text_color"
            android:textSize="35dp"
            android:textStyle="bold"/>
    </RelativeLayout>


</RelativeLayout>