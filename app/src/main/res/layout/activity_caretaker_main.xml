<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CaretakerMain">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue"
        app:logo="@drawable/gallery"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        app:subtitle="caretaker page"
        app:title="@string/app_name"
        android:onClick="onBackClick"
        app:titleMarginStart="90dp"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/caretaker_page"
        android:layout_centerHorizontal="true">


        <ImageButton
            android:id="@+id/ctUpload"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/upload"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:focusableInTouchMode="false"
            android:onClick="onCtUploadClick"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/upload_name"
            android:text="upload photos"
            android:layout_below="@id/ctUpload"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"
            android:textStyle="bold"/>



        <ImageButton
            android:id="@+id/databtn"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/upload_name"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/time"
            android:onClick="onCtManageClick"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/data_name"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="Manage"
            android:layout_below="@id/databtn"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"
            android:textStyle="bold"/>



    </RelativeLayout>
    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:layout_below="@+id/caretaker_page"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_centerHorizontal="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.857" />

</RelativeLayout>