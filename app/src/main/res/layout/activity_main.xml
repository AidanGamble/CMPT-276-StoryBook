<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginpage"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Choose your identity"
            android:id="@+id/identity"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"
            android:textStyle="bold"
            />

            <ImageButton
                android:id="@+id/btnpwd"
                android:layout_width="210dp"
                android:layout_height="210dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/identity"
                android:background="@drawable/postcard"
                android:focusableInTouchMode="false"
                android:onClick="onpwdClicked"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pwd_name"
            android:text="I am a user"
            android:layout_below="@id/btnpwd"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"
            android:textStyle="bold"/>


        <ImageButton
            android:id="@+id/btnct"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/pwd_name"
            android:layout_centerInParent="true"
            android:background="@drawable/givelove2"
            android:onClick="onctClicked"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/ct_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnct"
            android:layout_centerHorizontal="true"
            android:text="I am a caretaker"
            android:textSize="25dp"
            android:textStyle="bold" />
    </RelativeLayout>


</RelativeLayout>
