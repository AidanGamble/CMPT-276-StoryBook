<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_horizontal_margin2"
        android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/photo_size2"
        android:layout_height="@dimen/photo_size2"
        android:layout_centerHorizontal="true"
        android:id="@+id/icon"
        android:src="@drawable/album"
        >
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon"
        android:layout_marginTop="@dimen/activity_horizontal_margin2"
        android:text="Name:"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/blue2"
        android:id="@+id/nameinfo"

        />
        <EditText
            android:id="@+id/friendsname"
            android:layout_width="351dp"
            android:layout_height="52dp"
            android:layout_below="@+id/nameinfo"
            android:ems="10"
            android:hint="Enter the Name"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/friendsname"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="Email:"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/blue2"
            android:id="@+id/emailinfo"
            />

        <EditText
            android:id="@+id/email"
            android:layout_width="351dp"
            android:layout_height="52dp"
            android:layout_below="@+id/emailinfo"
            android:ems="10"
            android:hint="Enter the Email"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="Phone number:"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/blue2"
            android:id="@+id/phoneinfo"
            />

        <EditText
            android:id="@+id/phone"
            android:layout_width="351dp"
            android:layout_height="52dp"
            android:layout_below="@+id/phoneinfo"
            android:ems="10"
            android:hint="Enter the Phone Number"
            app:layout_constraintEnd_toEndOf="parent"/>

    </RelativeLayout>

</RelativeLayout>